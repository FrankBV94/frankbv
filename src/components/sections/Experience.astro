---
import Section from "../Section.astro";

import { work } from "@cv";
---

<Section title="Experiencia Profesional">
  <ul>
    {
      work.map(
        ({ name, startDate, endDate, position, summary, highlights, url }) => {
          const startYear = new Date(startDate).getFullYear();
          const endYear =
            endDate != null ? new Date(endDate).getFullYear() : "Presente";

          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>
                      <a href={url} title={`Ver ${name}`} target="_blank">
                        {name}
                      </a>
                      <div>
                        {highlights.map((highlight) => (
                          <span class="badge">{highlight}</span>
                        ))}
                      </div>
                    </h3>
                    <h4>{position}</h4>
                  </div>

                  <div>
                    <time datetime={startDate} data-title={startDate}>
                      {startYear}
                    </time>
                    {" - "}
                    <time datetime={endDate} data-title={endDate}>
                      {endYear}
                    </time>
                  </div>
                </header>

                <footer>
                  <p>{summary}</p>
                  <div>
                    {highlights.map((highlight) => (
                      <span class="badge">{highlight}</span>
                    ))}
                  </div>
                </footer>
              </article>
            </li>
          );
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  article a:hover {
    text-decoration: underline;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  h3 {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  time {
    min-width: 102px;
    cursor: default;
  }

  h3 div {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  [data-title]:hover:after {
    opacity: 1;
    transition: all 0.1s ease-in-out 0.5s;
    visibility: visible;
  }

  [data-title]:after {
    content: attr(data-title);
    background-color: #333;
    color: #fff;
    font-size: 0.75rem;
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      "Courier New",
      monospace;
    position: absolute;
    padding: 0.2rem 0.5rem;
    bottom: -1.4rem;
    left: 50%;
    white-space: nowrap;
    box-shadow: 1px 1px 1px #222222;
    opacity: 0;
    border: 1px solid #111111;
    z-index: 99999;
    visibility: hidden;
    border-radius: 6px;
  }

  [data-title] {
    position: relative;
  }

  @media (width <= 768px) {
    time {
      text-align: right;
    }

    footer div {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
    }

    h3 div {
      display: none;
      visibility: hidden;
    }
  }

  @media (width > 768px) {
    footer div {
      display: none;
      visibility: hidden;
    }
  }
</style>
